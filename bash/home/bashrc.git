  alias gra="git rebase --abort"
  alias grs="git rebase --skip"

  function grc() {
    git --no-pager grep -Ein '^[<>=]{7}([^<>=]|$)' && return -1
    git aa
    git rebase --continue
  }

  function glodc() {
    if [[ $# -gt 0 ]]; then
      glod -9 "$@" | cat
    else
      glod -9 | cat
    fi
  }

  function glogc() {
    if [[ $# -gt 0 ]]; then
      glog -9 "$@" | cat
    else
      glog -9 | cat
    fi
  }

  function glmerge() {
    glr head...$1 | grep '^>'
    glr head...$1 | grep '^<'
  }

  function glrebase() {
    glr head...$1 | grep '^<'
    glr head...$1 | grep '^>'
  }

# functions

function dev_and_stage () {
  ref=$(git symbolic-ref HEAD 2> /dev/null)  || ref=$(git rev-parse --short HEAD 2> /dev/null)  || return
  current_branch=${ref#refs/heads/}
  dev_branch="dev/${current_branch#*/}"
  git branch -D "$dev_branch"
  git checkout -b "$dev_branch"
  git checkout development
  git pull --rebase origin development
  git checkout "$dev_branch"
  git rebase development
  git checkout development
  git merge "$dev_branch"
  git push origin development
  git push staging head:master
  heroku run rake db:migrate -a beautified-staging
  git checkout "${current_branch}"
}

  gcd () {
    cd $(list_repos | grep -i "$1")
  }
  alias hcd="gcd"

  function cleanup_branches ()
  {
    gco master
    gpr
    git branch | sed 's/..//' | grep -v master |
    while read branch
    do
      read -u 1 -p "$branch (y/n): " yn
      if [[ $yn == "y" ]]
      then
        gco "$branch"
        gpr origin master
        gco master
        gb -d "$branch"
      else
        echo "Skipping $branch ..."
      fi
    done
  }

